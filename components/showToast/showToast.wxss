/*showToast*/
.toast-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 999999;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .2);
}
/*水平居中必备样式*/
.toast-center {
  position: fixed;
  z-index: 9999999;
  width: 100%;
  height: 100%;
  text-align: center;
}
.toast {
  display: inline-block;
  padding-bottom: 40rpx;
  width: 470rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 20rpx;
  text-align: center;
  overflow: hidden;
  vertical-align: middle;
}
/*垂直居中必备样式*/
.toast-center::after{
  content: '';
  display: inline-block;
  width: 0;
  height: 100%;
  vertical-align: middle;
}
.toast .toast-icon {
  display: block;
  margin: 0 auto 10rpx auto;
  width: 90rpx;
  height: 90rpx;
  margin-top: 20rpx;
}

.toast .toast-text {
  display: block;
  height: 200rpx;
  line-height: 200rpx;
  color: #000;
}

.toast .toast-title {
  display: inline-block;
  font-size: 40rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  background-color: #F65E4A;
}

.toast .toast-btn {
  width: 193rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 35rpx;
  color: #F65E4A;
  font-size: 32rpx;
  border: 1px solid #F65E4A;
  display: inline-block;
}

.toast .toast-btn2 {
  margin-left: 35rpx;
  background-color: #F65E4A;
  color: #fff;
}

.middle {
  width: 470rpx;
  height: 236rpx;
  display: table-cell;
  vertical-align: middle;
}
